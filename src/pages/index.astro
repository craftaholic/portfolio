---
import { SITE } from '../config';
import BaseLayout from '../layouts/BaseLayout.astro';
import Island3DScene from '../components/three/Island3DScene.astro';
import TerminalHero from '../components/sections/TerminalHero.astro';
import PageContainer from '../components/layout/PageContainer.astro';
import Section from '../components/sections/Section.astro';
import BioSection from '../components/sections/BioSection.astro';
import Timeline from '../components/sections/Timeline.astro';
import TimelineItem from '../components/sections/TimelineItem.astro';
import SimpleText from '../components/ui/SimpleText.astro';
import LinksList from '../components/ui/LinksList.astro';
---

<BaseLayout>
	<PageContainer>
		<Island3DScene />

		<TerminalHero
			name={SITE.author}
			title={SITE.description}
		/>

		<Section title="About">
			<BioSection>
				<p>
					I'm an engineer with a strong foundation in computer science and extensive experience in DevOps, complemented by strong full-stack development skills. I specialize in building complex infrastructure and platform solutions, and I am recognized for tackling challenging problems, delivering high-impact results, and earning the trust of my peers through reliability and technical expertise.
				</p>
				<p>
					I thrive in fast-paced, international environments and am passionate about designing scalable, robust systems that empower teams and support organizational goals.
				</p>
			</BioSection>
		</Section>

		<Section title="Bio">
			<Timeline>
				<TimelineItem
					year="2025"
					text="TymeX - Started as Senior Platform Engineer at fintech unicorn"
				/>
				<TimelineItem
					year="2024"
					text="FPT Software - Promoted to Senior DevOps Engineer"
				/>
				<TimelineItem
					year=""
          text="Graduated from Hanoi University of Science and Technology (HUST) - (3.2/4.0 CPA) - Enginneer's degree"
				/>
				<TimelineItem
					year="2023"
					text="FPT Software - Received FPT Software Best Performer Award"
				/>
				<TimelineItem
					year="2022"
					text="FPT Software - Started at FPT Software as DevOps Engineer"
				/>
			</Timeline>
		</Section>

		<Section title="I â™¥">
			<SimpleText>
        Building things, Neovim, Golang, Motorcycles, Basketball, Watch collecting
			</SimpleText>
		</Section>

		<Section title="On the web">
			<LinksList links={[...SITE.socialLinks]} />
		</Section>
	</PageContainer>
</BaseLayout>
