---
import { SITE, WORK_HISTORY } from '../config';
import BaseLayout from '../layouts/BaseLayout.astro';
import VimHero from '../components/sections/VimHero.astro';
import PageContainer from '../components/layout/PageContainer.astro';
import Section from '../components/sections/Section.astro';
import BioSection from '../components/sections/BioSection.astro';
import Timeline from '../components/sections/Timeline.astro';
import TimelineItem from '../components/sections/TimelineItem.astro';
import SimpleText from '../components/ui/SimpleText.astro';
import LinksList from '../components/ui/LinksList.astro';
import JsonLd from '../components/seo/JsonLd.astro';
---

<BaseLayout>
	<JsonLd type="Person" />
	<JsonLd type="WebSite" />
	<PageContainer>

		<VimHero
			name={SITE.author}
			role={SITE.description}
			imageSrc="/assets/images/profile.webp"
		/>

		<Section title="About">
			<BioSection>
				<p>
					Engineer at heart who loves building things, solving problems, and sharing knowledge. Enjoy working end&#8209;to&#8209;end, from development to CI/CD, observability, infrastructure, and operations. Always curious, always learning.
				</p>
				<p>
					Currently working as a Senior Platform Engineer. Outside of work, I love traveling on my motorcycle.
				</p>
			</BioSection>
		</Section>

		<Section title="Bio">
			<Timeline>
				{WORK_HISTORY.map((item) => (
					<TimelineItem year={item.year} text={item.text} />
				))}
			</Timeline>
		</Section>

		<Section title="I â™¥">
			<SimpleText>
        Building things, Neovim, Golang, Motorcycles, Basketball, Watch collecting
			</SimpleText>
		</Section>

		<Section title="On the web">
			<LinksList links={[...SITE.socialLinks]} />
		</Section>
	</PageContainer>
</BaseLayout>
