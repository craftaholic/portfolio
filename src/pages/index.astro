---
import BaseLayout from '../layouts/BaseLayout.astro';
import Island3DScene from '../components/Island3DScene.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout>
	<div class="container">
		<!-- Hero Section -->
		<Hero greeting="Hello, I'm a Senior Cloud/DevOps/Platform Engineer based in Vietnam!">
			<Island3DScene slot="image" />
		</Hero>

		<!-- Work Section -->
		<section class="section">
			<h2 class="section-title">Work</h2>
			<div class="bio-section">
				<p class="bio-paragraph">
					I'm an engineer with a strong foundation in computer science and extensive experience in DevOps, complemented by strong full-stack development skills. I specialize in building complex infrastructure and platform solutions, and I am recognized for tackling challenging problems, delivering high-impact results, and earning the trust of my peers through reliability and technical expertise.
				</p>
				<p class="bio-paragraph">
					I thrive in fast-paced, international environments and am passionate about designing scalable, robust systems that empower teams and support organizational goals.
				</p>
			</div>
		</section>

		<!-- Bio Section -->
		<section class="section">
			<h2 class="section-title">Bio</h2>
			<div class="timeline">
				<div class="timeline-item">
					<span class="timeline-year">2023</span>
					<span class="timeline-text">Received FHN (Fsoft Hanoi) Best Performer Award</span>
				</div>
				<div class="timeline-item">
					<span class="timeline-year">2019</span>
					<span class="timeline-text">Graduated from Hanoi University of Science and Technology (HUST) with Engineer's degree in Information Technology</span>
				</div>
			</div>
		</section>

		<!-- I Love Section -->
		<section class="section">
			<h2 class="section-title">I ♥</h2>
			<p class="simple-text">
				Neovim, Motorcycles, Golang, DevSecOps, Kubernetes, Building scalable systems
			</p>
		</section>

		<!-- On the web Section -->
		<section class="section">
			<h2 class="section-title">On the web</h2>
			<div class="links-list">
				<a href="https://github.com/craftaholic" class="link-item" target="_blank">GitHub</a>
				<a href="https://www.linkedin.com/in/tranthangportfolio/" class="link-item" target="_blank">LinkedIn</a>
				<a href="https://blog.tommytran.me" class="link-item" target="_blank">Blog</a>
			</div>
		</section>
	</div>
</BaseLayout>

<style>
	.container {
		max-width: 42rem;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	/* Section Styles */
	.section {
		margin-bottom: 3rem;
	}

	.section-title {
		font-size: var(--text-lg);
		font-weight: 700;
		color: var(--gray-0);
		margin-bottom: 1.25rem;
		text-decoration: underline;
		text-decoration-color: var(--gray-600);
		text-decoration-thickness: 3px;
		text-underline-offset: 6px;
	}

	/* Bio Section */
	.bio-section {
		text-indent: 1rem;
	}

	.bio-paragraph {
		margin-bottom: 1rem;
		line-height: 1.8;
		color: var(--gray-200);
		text-align: justify;
		hyphens: auto;
		word-spacing: -0.05em;
		text-justify: inter-word;
	}

	/* Timeline */
	.timeline {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.timeline-item {
		display: flex;
		gap: 1rem;
	}

	.timeline-year {
		font-weight: 700;
		color: var(--gray-0);
		min-width: 3.5rem;
		flex-shrink: 0;
	}

	.timeline-text {
		color: var(--gray-200);
		line-height: 1.6;
	}

	/* Simple Text */
	.simple-text {
		color: var(--gray-200);
		line-height: 1.8;
		text-indent: 1rem;
	}

	/* Links List */
	.links-list {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding-left: 1rem;
	}

	.link-item {
		color: var(--accent-regular);
		text-decoration: none;
		transition: color var(--theme-transition);
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.link-item::before {
		content: '▸';
		color: var(--accent-light);
	}

	.link-item:hover {
		color: var(--accent-light);
	}

	@media (min-width: 50em) {
		.container {
			padding: 3rem 2rem;
		}

		.section {
			margin-bottom: 4rem;
		}

		.section-title {
			font-size: var(--text-xl);
		}
	}
</style>
