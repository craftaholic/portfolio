---
import BaseLayout from '../layouts/BaseLayout.astro';
import Island3DScene from '../components/Island3DScene.astro';
import Hero from '../components/Hero.astro';
import PageContainer from '../components/PageContainer.astro';
import Section from '../components/Section.astro';
import BioSection from '../components/BioSection.astro';
import Timeline from '../components/Timeline.astro';
import TimelineItem from '../components/TimelineItem.astro';
import SimpleText from '../components/SimpleText.astro';
import LinksList from '../components/LinksList.astro';

const socialLinks = [
	{ href: 'https://github.com/craftaholic', label: 'GitHub' },
	{ href: 'https://www.linkedin.com/in/tranthangportfolio/', label: 'LinkedIn' },
	{ href: 'https://blog.tommytran.me', label: 'Blog' },
];
---

<BaseLayout>
	<PageContainer>
		<Hero greeting="Hello, I'm a Senior Cloud/DevOps/Platform Engineer based in Vietnam!">
			<Island3DScene slot="image" />
		</Hero>

		<Section title="Work">
			<BioSection>
				<p>
					I'm an engineer with a strong foundation in computer science and extensive experience in DevOps, complemented by strong full-stack development skills. I specialize in building complex infrastructure and platform solutions, and I am recognized for tackling challenging problems, delivering high-impact results, and earning the trust of my peers through reliability and technical expertise.
				</p>
				<p>
					I thrive in fast-paced, international environments and am passionate about designing scalable, robust systems that empower teams and support organizational goals.
				</p>
			</BioSection>
		</Section>

		<Section title="Bio">
			<Timeline>
				<TimelineItem
					year="2025"
					text="TymeX - Started as Senior Platform Engineer at fintech unicorn"
				/>
				<TimelineItem
					year="2024"
					text="FPT Software - Promoted to Senior DevOps Engineer"
				/>
				<TimelineItem
					year=""
          text="Graduated from Hanoi University of Science and Technology (HUST) - (3.2/4.0 CPA) - Enginneer's degree"
				/>
				<TimelineItem
					year="2023"
					text="FPT Software - Received FPT Software Best Performer Award"
				/>
				<TimelineItem
					year="2022"
					text="FPT Software - Started at FPT Software as DevOps Engineer"
				/>
			</Timeline>
		</Section>

		<Section title="I â™¥">
			<SimpleText>
        Building things, Neovim, Golang, Motorcycles, Basketball, Watch collecting
			</SimpleText>
		</Section>

		<Section title="On the web">
			<LinksList links={socialLinks} />
		</Section>
	</PageContainer>
</BaseLayout>
