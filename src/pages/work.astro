---
import { getCollection } from 'astro:content';
import Hero from '../components/sections/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import PageContainer from '../components/layout/PageContainer.astro';
import Placeholder from '../components/blog/Placeholder.astro';
import PortfolioPreview from '../components/blog/PortfolioPreview.astro';
import Grid from '../components/ui/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Work Experience"
	description="My professional work experience and client projects"
>
	<PageContainer>
		<Hero
			title="Work Experience"
			tagline="Professional experience across platform engineering, DevOps, and cloud infrastructure."
			align="start"
		/>
		{projects.length === 0 ? (
			<Placeholder>No projects yet. Add markdown files to src/content/work/</Placeholder>
		) : (
			<Grid variant="offset">
				{projects.map((project) => (
					<li>
						<PortfolioPreview project={project} />
					</li>
				))}
			</Grid>
		)}
	</PageContainer>
</BaseLayout>
