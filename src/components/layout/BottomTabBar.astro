---
import { NAV_LINKS } from '../../config';
import { isCurrentPage } from '../../utils/navigation';

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
---

<nav class="bottom-tab-bar" aria-label="Mobile navigation">
	<ul class="tab-list">
		<li class="tab-indicator" aria-hidden="true"></li>
		{
			NAV_LINKS.map(({ label, href }) => (
				<li>
					<a
						href={href}
						class:list={['tab-item', { active: isCurrentPage(pathname, href) }]}
						aria-current={isCurrentPage(pathname, href) ? 'page' : undefined}
					>
						{label}
					</a>
				</li>
			))
		}
	</ul>
</nav>

<script>
	// Sliding tab indicator
	function moveTabIndicatorTo(targetLink: HTMLElement, animate = true) {
		const tabList = document.querySelector('.tab-list') as HTMLElement;
		const indicator = document.querySelector('.tab-indicator') as HTMLElement;

		if (!tabList || !indicator || !targetLink) return;

		const listRect = tabList.getBoundingClientRect();
		const targetRect = targetLink.getBoundingClientRect();

		indicator.style.transition = animate ? 'all var(--nav-transition)' : 'none';

		indicator.style.width = `${targetRect.width}px`;
		indicator.style.height = `${targetRect.height}px`;
		indicator.style.left = `${targetRect.left - listRect.left}px`;
		indicator.style.top = `${targetRect.top - listRect.top}px`;
		indicator.style.opacity = '1';
	}

	function initTabIndicator() {
		const links = document.querySelectorAll('.tab-list .tab-item') as NodeListOf<HTMLElement>;
		const activeLink = document.querySelector('.tab-list .tab-item[aria-current="page"]') as HTMLElement;

		// Position indicator on active link (no animation on init)
		if (activeLink) {
			moveTabIndicatorTo(activeLink, false);
		}

		// Add click listeners to animate indicator before navigation
		links.forEach(link => {
			link.addEventListener('click', (e) => {
				const target = e.currentTarget as HTMLElement;
				moveTabIndicatorTo(target, true);
			});
		});
	}

	// Update active state based on URL
	function updateTabActiveState() {
		const links = document.querySelectorAll('.tab-list .tab-item');
		let pathname = window.location.pathname;
		if (pathname.at(0) !== '/') pathname = '/' + pathname;
		if (pathname.at(-1) !== '/') pathname += '/';

		links.forEach(link => {
			const href = link.getAttribute('href') || '';
			const isActive = pathname === href || (href !== '/' && pathname.startsWith(href));
			if (isActive) {
				link.setAttribute('aria-current', 'page');
				link.classList.add('active');
			} else {
				link.removeAttribute('aria-current');
				link.classList.remove('active');
			}
		});

		// Update indicator position
		const activeLink = document.querySelector('.tab-list .tab-item[aria-current="page"]') as HTMLElement;
		if (activeLink) {
			moveTabIndicatorTo(activeLink, false);
		}
	}

	// Initialize
	initTabIndicator();

	// Update on resize
	window.addEventListener('resize', updateTabActiveState);

	// Update after page swap
	document.addEventListener('astro:after-swap', () => {
		updateTabActiveState();
		initTabIndicator();
	});
</script>

<style>
	.bottom-tab-bar {
		display: flex;
		justify-content: center;
		position: fixed;
		bottom: 1rem;
		bottom: calc(1rem + env(safe-area-inset-bottom, 0px));
		left: 50%;
		transform: translateX(-50%);
		z-index: 9999;
		/* Prevent disappearing during view transitions */
		view-transition-name: bottom-tab-bar;
	}

	/* Disable animation for this element during transitions */
	::view-transition-old(bottom-tab-bar),
	::view-transition-new(bottom-tab-bar) {
		animation: none;
		mix-blend-mode: normal;
	}

	.tab-list {
		position: relative;
		display: flex;
		align-items: center;
		list-style: none;
		margin: 0;
		padding: 0.5rem 0.5625rem;
		gap: 0.25rem;
		background: radial-gradient(var(--gray-900), var(--gray-800) 150%);
		border-radius: 999rem;
		box-shadow: var(--shadow-md);
	}

	/* Gradient border like desktop nav */
	.tab-list::before {
		position: absolute;
		inset: -1px;
		content: '';
		background: var(--gradient-stroke);
		border-radius: 999rem;
		z-index: -1;
	}

	.tab-indicator {
		position: absolute;
		background-color: var(--accent-regular);
		border-radius: 999rem;
		opacity: 0;
		transition: all var(--nav-transition);
		z-index: 0;
		pointer-events: none;
	}

	.tab-item {
		position: relative;
		z-index: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem 0.75rem;
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--gray-300);
		text-decoration: none;
		border-radius: 999rem;
		transition: color var(--theme-transition);
		white-space: nowrap;
	}

	.tab-item:hover,
	.tab-item:focus {
		color: var(--gray-100);
	}

	.tab-item.active {
		color: var(--accent-text-over);
	}

	/* Hide on desktop */
	@media (min-width: 50em) {
		.bottom-tab-bar {
			display: none;
		}
	}
</style>
