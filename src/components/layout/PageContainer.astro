---
// Main container for all pages with consistent max-width and padding

interface Props {
	/** Container size: default (42rem), medium (50rem for blog list), wide (65rem for blog post) */
	size?: 'default' | 'medium' | 'wide';
	/** @deprecated Use size="wide" instead */
	wide?: boolean;
}

const { size, wide = false } = Astro.props;
const containerSize = size ?? (wide ? 'wide' : 'default');
---

<div class:list={['page-container', containerSize]}>
	<slot />
</div>

<style>
	.page-container {
		max-width: 42rem;
		margin: 0 auto;
		padding: 0 1rem 2rem 1rem;
	}

	.page-container.medium {
		max-width: 50rem;
	}

	.page-container.wide {
		max-width: 65rem;
	}

	@media (min-width: 50em) {
		.page-container {
			padding: 0 2rem 3rem 2rem;
		}
	}
</style>
