---
/**
 * Displays a list of tags as clickable pills
 * Used on the tags index page to show all available tags
 */
import type { Tag } from '../../utils/getUniqueTags';
import Pill from '../ui/Pill.astro';

interface Props {
  tags: Tag[];
}

const { tags } = Astro.props;
---

<ul class="tags-list">
  {tags.map(({ tag, tagName }) => (
    <li>
      <a href={`/blog/tags/${tag}`} class="tag-link">
        <Pill>{tagName}</Pill>
      </a>
    </li>
  ))}
</ul>

<style>
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag-link {
    text-decoration: none;
    transition: transform var(--theme-transition);
    display: block;
  }

  .tag-link:hover {
    transform: translateY(-2px);
  }
</style>
