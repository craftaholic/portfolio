---
import type { Tag } from '../../utils/getUniqueTags';
import ExpandableTags from '../ui/ExpandableTags.astro';

interface Props {
  tags: Tag[];
  /** Max tags to show before "more" link */
  maxTags?: number;
}

const { tags, maxTags = 8 } = Astro.props;

// Convert to ExpandableTags format with hrefs
const tagItems = tags.map(({ tag, tagName }) => ({
  label: tagName,
  href: `/blog/tags/${tag}`,
}));
---

<div class="tags-filter">
  <span class="tags-label">Tags:</span>
  <ExpandableTags tags={tagItems} maxTags={maxTags} />
</div>

<style>
  .tags-filter {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--gray-800);
  }

  .tags-label {
    font-size: var(--text-sm);
    color: var(--gray-400);
  }
</style>
