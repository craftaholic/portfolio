---
interface Props {
	greeting: string;
}

const { greeting } = Astro.props;
---

<div class="hero">
	<div class="profile-image">
		<slot name="image" />
	</div>
	<div class="hero-text">
		<h1 class="greeting">{greeting}</h1>
	</div>
</div>

<style>
	.hero {
		text-align: center;
		margin-bottom: 4rem;
		padding: 2rem 0;
	}

	.profile-image {
		margin: 0 auto 2rem;
		max-width: 280px;
	}

	.greeting {
		font-size: var(--text-base);
		font-weight: 400;
		color: var(--gray-0);
		line-height: 1.6;
		background-color: var(--accent-overlay);
		border-radius: 0.5rem;
		padding: 0.75rem 1rem;
		display: inline-block;
		max-width: 90%;
	}

	@media (min-width: 50em) {
		.profile-image {
			max-width: 400px;
		}

		.greeting {
			font-size: var(--text-md);
			max-width: 80%;
		}
	}
</style>
