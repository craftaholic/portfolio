---
/**
 * Lightbox-style overlay for displaying journal entries
 * Similar to profile image lightbox in VimHero
 */
---

<div class="journal-overlay" id="journal-overlay" aria-hidden="true">
  <div class="overlay-backdrop"></div>
  <button class="nav-btn nav-prev" aria-label="Previous journal">
    <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M15 18l-6-6 6-6"/>
    </svg>
  </button>
  <button class="nav-btn nav-next" aria-label="Next journal">
    <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M9 18l6-6-6-6"/>
    </svg>
  </button>
  <div class="overlay-content">
    <div class="header-actions">
      <button class="back-btn" aria-label="Back to calendar">
        <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
        <span>Calendar</span>
      </button>
      <button class="close-btn" aria-label="Close journal">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>
    <div class="journal-header">
      <span class="journal-date"></span>
      <h2 class="journal-title"></h2>
    </div>
    <div class="journal-body"></div>
  </div>
</div>

<script>
  function initJournalOverlay() {
    const overlay = document.getElementById('journal-overlay');
    const backdrop = overlay?.querySelector('.overlay-backdrop');
    const closeBtn = overlay?.querySelector('.close-btn');
    const backBtn = overlay?.querySelector('.back-btn');
    const prevBtn = overlay?.querySelector('.nav-prev');
    const nextBtn = overlay?.querySelector('.nav-next');
    const content = overlay?.querySelector('.overlay-content') as HTMLElement;
    const dateEl = overlay?.querySelector('.journal-date');
    const titleEl = overlay?.querySelector('.journal-title');
    const bodyEl = overlay?.querySelector('.journal-body');

    if (!overlay || !backdrop || !closeBtn || !backBtn || !prevBtn || !nextBtn || !content || !dateEl || !titleEl || !bodyEl) return;

    let currentJournalId: string | null = null;
    let journalIds: string[] = [];

    function getJournalData(id: string) {
      const template = document.querySelector(`template[data-journal-content="${id}"]`) as HTMLTemplateElement;
      if (!template) return null;
      return {
        id,
        date: template.dataset.date || '',
        title: template.dataset.title || '',
        content: template.innerHTML
      };
    }

    function updateNavButtons() {
      const currentIndex = journalIds.indexOf(currentJournalId || '');
      prevBtn.classList.toggle('hidden', currentIndex <= 0);
      nextBtn.classList.toggle('hidden', currentIndex >= journalIds.length - 1);
    }

    function showJournal(id: string) {
      const data = getJournalData(id);
      if (!data) return;

      currentJournalId = id;
      dateEl.textContent = data.date;
      titleEl.textContent = data.title;
      bodyEl.innerHTML = data.content;
      bodyEl.scrollTop = 0;
      updateNavButtons();
    }

    function navigatePrev() {
      const currentIndex = journalIds.indexOf(currentJournalId || '');
      if (currentIndex > 0) {
        showJournal(journalIds[currentIndex - 1]);
      }
    }

    function navigateNext() {
      const currentIndex = journalIds.indexOf(currentJournalId || '');
      if (currentIndex < journalIds.length - 1) {
        showJournal(journalIds[currentIndex + 1]);
      }
    }

    function openOverlay(data: JournalOverlayData & { id?: string }) {
      // Collect all journal IDs from templates
      const templates = document.querySelectorAll('template[data-journal-content]');
      journalIds = Array.from(templates).map(t => (t as HTMLTemplateElement).dataset.journalContent || '');

      currentJournalId = data.id || null;
      dateEl.textContent = data.date;
      titleEl.textContent = data.title;
      bodyEl.innerHTML = data.content;
      bodyEl.scrollTop = 0;

      overlay.classList.add('active');
      overlay.setAttribute('aria-hidden', 'false');
      document.documentElement.style.overflow = 'hidden';
      document.body.style.overflow = 'hidden';

      updateNavButtons();
    }

    function closeOverlay() {
      overlay.classList.remove('active');
      overlay.setAttribute('aria-hidden', 'true');
      document.documentElement.style.overflow = '';
      document.body.style.overflow = '';
      currentJournalId = null;
    }

    function backToTimeline() {
      closeOverlay();
      if (window.openJournalTimeline) {
        window.openJournalTimeline();
      }
    }

    // Swipe handling for mobile
    let touchStartX = 0;
    let touchEndX = 0;
    const SWIPE_THRESHOLD = 50;

    content.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    content.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > SWIPE_THRESHOLD) {
        if (diff > 0) {
          navigateNext(); // Swipe left -> next
        } else {
          navigatePrev(); // Swipe right -> prev
        }
      }
    }, { passive: true });

    backdrop.addEventListener('click', closeOverlay);
    closeBtn.addEventListener('click', closeOverlay);
    backBtn.addEventListener('click', backToTimeline);
    prevBtn.addEventListener('click', navigatePrev);
    nextBtn.addEventListener('click', navigateNext);

    document.addEventListener('keydown', (e) => {
      if (!overlay.classList.contains('active')) return;

      if (e.key === 'Escape') {
        closeOverlay();
      } else if (e.key === 'ArrowLeft') {
        navigatePrev();
      } else if (e.key === 'ArrowRight') {
        navigateNext();
      }
    });

    // Expose open function globally for journey buttons
    window.openJournalOverlay = openOverlay;
  }

  initJournalOverlay();
  document.addEventListener('astro:after-swap', initJournalOverlay);
</script>

<style>
  .journal-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-normal), visibility var(--transition-normal);
  }

  .journal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .overlay-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .overlay-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 700px;
    max-height: 85vh;
    background: var(--gray-900);
    border: 1px solid var(--gray-700);
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    animation: overlay-zoom var(--transition-normal);
  }

  .journal-overlay.active .overlay-content {
    animation: overlay-zoom var(--transition-normal) forwards;
  }

  @keyframes overlay-zoom {
    from {
      transform: scale(0.9) translateY(20px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateY(0);
      opacity: 1;
    }
  }

  .header-actions {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
    z-index: 2;
  }

  .back-btn,
  .close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-800);
    border: 1px solid var(--gray-700);
    border-radius: 0.5rem;
    padding: 0.5rem;
    color: var(--gray-400);
    cursor: pointer;
    transition: color var(--transition-fast), border-color var(--transition-fast);
  }

  .back-btn {
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    font-size: var(--text-sm);
    font-family: inherit;
  }

  .back-btn:hover,
  .close-btn:hover {
    color: var(--gray-0);
    border-color: var(--gray-600);
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: var(--gray-800);
    border: 1px solid var(--gray-700);
    border-radius: 50%;
    color: var(--gray-400);
    cursor: pointer;
    transition: color var(--transition-fast), border-color var(--transition-fast), opacity var(--transition-fast);
  }

  .nav-btn:hover {
    color: var(--gray-0);
    border-color: var(--gray-600);
  }

  .nav-btn.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .nav-prev {
    left: 0.5rem;
  }

  .nav-next {
    right: 0.5rem;
  }

  /* Hide nav buttons on mobile - use swipe instead */
  @media (max-width: 50em) {
    .nav-btn {
      display: none;
    }
  }

  .journal-header {
    padding: 1.5rem 5rem 1.5rem 1.5rem;
    border-bottom: 1px solid var(--gray-800);
    flex-shrink: 0;
  }

  .journal-date {
    display: inline-block;
    font-size: var(--text-sm);
    color: var(--accent-regular);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .journal-title {
    font-size: var(--text-xl);
    color: var(--gray-0);
    margin: 0;
    font-weight: 600;
  }

  .journal-body {
    padding: 1.5rem;
    overflow-y: auto;
    line-height: 1.7;
    scrollbar-width: thin;
    scrollbar-color: var(--gray-600) transparent;
  }

  .journal-body::-webkit-scrollbar {
    width: 6px;
  }

  .journal-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .journal-body::-webkit-scrollbar-thumb {
    background: var(--gray-600);
    border-radius: 3px;
  }

  .journal-body::-webkit-scrollbar-thumb:hover {
    background: var(--gray-500);
  }

  /* Markdown content styles */
  .journal-body :global(h2) {
    font-size: 1.1rem;
    color: var(--gray-0);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .journal-body :global(h2:first-child) {
    margin-top: 0;
  }

  .journal-body :global(h3) {
    font-size: 1rem;
    color: var(--gray-100);
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .journal-body :global(p) {
    color: var(--gray-300);
    margin-bottom: 1rem;
  }

  .journal-body :global(ul),
  .journal-body :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: var(--gray-300);
  }

  .journal-body :global(li) {
    margin-bottom: 0.375rem;
  }

  .journal-body :global(strong) {
    color: var(--gray-0);
    font-weight: 600;
  }

  .journal-body :global(code) {
    background-color: var(--gray-800);
    color: var(--accent-regular);
    padding: 0.15rem 0.35rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .journal-body :global(pre) {
    background-color: var(--gray-800);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .journal-body :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: var(--gray-200);
    font-size: var(--text-sm);
  }

  @media (min-width: 50em) {
    .journal-header {
      padding: 2rem 6rem 2rem 2rem;
    }

    .journal-body {
      padding: 2rem;
    }

    .journal-title {
      font-size: var(--text-2xl);
    }
  }
</style>
