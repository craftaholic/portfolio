---
/**
 * Card component for product grid view
 * Shows title, description, status badge, and tags
 */
import type { CollectionEntry } from 'astro:content';
import Pill from '../ui/Pill.astro';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { data, id } = product;
const href = `/products/${id}`;

const statusColors = {
  mature: 'status-mature',
  wip: 'status-wip',
  archived: 'status-archived',
};

const statusLabels = {
  mature: 'Mature',
  wip: 'In Progress',
  archived: 'Archived',
};
---

<a href={href} class="product-card">
  <div class="card-header">
    {data.icon && <span class="card-icon">{data.icon}</span>}
    <span class:list={['status-badge', statusColors[data.status]]}>{statusLabels[data.status]}</span>
  </div>
  <h3 class="card-title">{data.title}</h3>
  <p class="card-description">{data.description}</p>
  {data.tags.length > 0 && (
    <div class="card-tags">
      {data.tags.slice(0, 3).map((tag) => (
        <Pill size="sm">{tag}</Pill>
      ))}
      {data.tags.length > 3 && (
        <span class="more-tags">+{data.tags.length - 3}</span>
      )}
    </div>
  )}
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: var(--gray-900);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: border-color var(--theme-transition), transform 0.2s ease;
  }

  .product-card:hover {
    border-color: var(--gray-700);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .card-icon {
    font-size: 1.5rem;
  }

  .status-badge {
    font-size: var(--text-xs);
    font-weight: 500;
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .status-mature {
    background: rgba(52, 211, 153, 0.15);
    color: rgb(52, 211, 153);
  }

  .status-wip {
    background: rgba(251, 191, 36, 0.15);
    color: rgb(251, 191, 36);
  }

  .status-archived {
    background: rgba(156, 163, 175, 0.15);
    color: rgb(156, 163, 175);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 0.5rem 0;
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--gray-400);
    line-height: 1.5;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    align-items: center;
  }

  .more-tags {
    font-size: var(--text-sm);
    color: var(--gray-500);
  }
</style>
