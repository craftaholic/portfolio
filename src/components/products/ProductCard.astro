---
/**
 * Card component for product grid view
 * Shows title, description, status badge, and tags
 */
import type { CollectionEntry } from 'astro:content';
import ExpandableTags from '../ui/ExpandableTags.astro';
import { STATUS_LABELS, STATUS_CLASSES } from '../../utils/product-status';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { data, id } = product;
const href = `/products/${id}`;
---

<a href={href} class="product-card" data-github={data.github || ''}>
  <div class="card-header">
    <div class="card-header-left">
      {data.icon && <span class="card-icon">{data.icon}</span>}
      {data.github && (
        data.opensource ? (
          <span class="github-stars" data-repo={data.github} hidden>
            <svg class="star-icon" viewBox="0 0 16 16" width="14" height="14" fill="currentColor">
              <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25z"/>
            </svg>
            <span class="star-count"></span>
          </span>
        ) : (
          <span class="private-badge">
            <svg class="lock-icon" viewBox="0 0 16 16" width="12" height="12" fill="currentColor">
              <path d="M4 4v2h-.25A1.75 1.75 0 0 0 2 7.75v5.5c0 .966.784 1.75 1.75 1.75h8.5A1.75 1.75 0 0 0 14 13.25v-5.5A1.75 1.75 0 0 0 12.25 6H12V4a4 4 0 1 0-8 0Zm6.5 2V4a2.5 2.5 0 0 0-5 0v2Z"/>
            </svg>
            Private
          </span>
        )
      )}
    </div>
    <div class="card-header-right">
      {data.pinned && <span class="pinned-badge">Pinned</span>}
      <span class:list={['status-badge', STATUS_CLASSES[data.status]]}>{STATUS_LABELS[data.status]}</span>
    </div>
  </div>
  <h3 class="card-title">{data.title}</h3>
  <p class="card-description">{data.description}</p>
  {data.tags.length > 0 && (
    <ExpandableTags tags={data.tags} maxTags={3} preventNavigation />
  )}
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: var(--gray-900);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: border-color var(--theme-transition), transform 0.2s ease;
  }

  .product-card:hover {
    border-color: var(--gray-700);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .card-header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card-header-right {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card-icon {
    font-size: 1.5rem;
  }

  .pinned-badge {
    padding: 0.125rem 0.5rem;
    background-color: var(--gray-700);
    color: var(--gray-300);
    border-radius: 999rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .github-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--gray-400);
    background: var(--gray-800);
    padding: 0.125rem 0.5rem;
    border-radius: 999rem;
  }

  .star-icon {
    color: var(--gray-500);
  }

  .star-count {
    min-width: 1ch;
  }

  .private-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--gray-500);
    background: var(--gray-800);
    padding: 0.125rem 0.5rem;
    border-radius: 999rem;
  }

  .lock-icon {
    color: var(--gray-500);
  }

  .status-badge {
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    border-radius: 999rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .status-mature {
    background: var(--status-mature-bg);
    color: var(--status-mature-text);
  }

  .status-wip {
    background: var(--status-wip-bg);
    color: var(--status-wip-text);
  }

  .status-archived {
    background: var(--status-archived-bg);
    color: var(--status-archived-text);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 0.5rem 0;
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--gray-400);
    line-height: 1.5;
    margin: 0 0 1rem 0;
    flex: 1;
  }

</style>

<script>
  import { initStarsObserver } from '../../utils/github-stars';

  initStarsObserver();
  document.addEventListener('astro:after-swap', initStarsObserver);
</script>
