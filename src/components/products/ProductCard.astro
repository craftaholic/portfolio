---
/**
 * Card component for product grid view
 * Shows title, description, status badge, and tags
 */
import type { CollectionEntry } from 'astro:content';
import Pill from '../ui/Pill.astro';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { data, id } = product;
const href = `/products/${id}`;

const statusColors = {
  mature: 'status-mature',
  wip: 'status-wip',
  archived: 'status-archived',
};

const statusLabels = {
  mature: 'Mature',
  wip: 'In Progress',
  archived: 'Archived',
};
---

<a href={href} class="product-card" data-github={data.github || ''}>
  <div class="card-header">
    <div class="card-header-left">
      {data.icon && <span class="card-icon">{data.icon}</span>}
      {data.github && (
        <span class="github-stars" data-repo={data.github}>
          <svg class="star-icon" viewBox="0 0 16 16" width="14" height="14" fill="currentColor">
            <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.75.75 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25z"/>
          </svg>
          <span class="star-count">-</span>
        </span>
      )}
    </div>
    <span class:list={['status-badge', statusColors[data.status]]}>{statusLabels[data.status]}</span>
  </div>
  <h3 class="card-title">{data.title}</h3>
  <p class="card-description">{data.description}</p>
  {data.tags.length > 0 && (
    <div class="card-tags">
      {data.tags.slice(0, 3).map((tag) => (
        <Pill size="sm">{tag}</Pill>
      ))}
      {data.tags.length > 3 && (
        <span class="more-tags">+{data.tags.length - 3}</span>
      )}
    </div>
  )}
</a>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: var(--gray-900);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: border-color var(--theme-transition), transform 0.2s ease;
  }

  .product-card:hover {
    border-color: var(--gray-700);
    transform: translateY(-2px);
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .card-header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card-icon {
    font-size: 1.5rem;
  }

  .github-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--text-xs);
    color: var(--gray-400);
    background: var(--gray-800);
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
  }

  .star-icon {
    color: var(--gray-500);
  }

  .star-count {
    min-width: 1ch;
  }

  .status-badge {
    font-size: var(--text-xs);
    font-weight: 500;
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .status-mature {
    background: var(--status-mature-bg);
    color: var(--status-mature-text);
  }

  .status-wip {
    background: var(--status-wip-bg);
    color: var(--status-wip-text);
  }

  .status-archived {
    background: var(--status-archived-bg);
    color: var(--status-archived-text);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 0.5rem 0;
  }

  .card-description {
    font-size: var(--text-sm);
    color: var(--gray-400);
    line-height: 1.5;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    align-items: center;
  }

  .more-tags {
    font-size: var(--text-sm);
    color: var(--gray-500);
  }
</style>

<script>
  function parseGitHubUrl(url: string): { owner: string; repo: string } | null {
    const match = url.match(/github\.com\/([^/]+)\/([^/]+)/);
    if (!match) return null;
    return { owner: match[1], repo: match[2].replace(/\.git$/, '') };
  }

  function formatStars(count: number): string {
    if (count >= 1000) {
      return (count / 1000).toFixed(1).replace(/\.0$/, '') + 'k';
    }
    return count.toString();
  }

  async function fetchStarsForElement(el: Element) {
    const repoUrl = el.getAttribute('data-repo');
    if (!repoUrl) return;

    const parsed = parseGitHubUrl(repoUrl);
    if (!parsed) return;

    const countEl = el.querySelector('.star-count');
    if (!countEl) return;

    try {
      const response = await fetch(`https://api.github.com/repos/${parsed.owner}/${parsed.repo}`);
      if (!response.ok) return;

      const data = await response.json();
      countEl.textContent = formatStars(data.stargazers_count);
    } catch {
      countEl.textContent = '-';
    }
  }

  function initStarsObserver() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            fetchStarsForElement(entry.target);
            observer.unobserve(entry.target);
          }
        });
      },
      { rootMargin: '100px' }
    );

    document.querySelectorAll('.github-stars[data-repo]').forEach((el) => {
      observer.observe(el);
    });
  }

  // Run on page load and after Astro view transitions
  initStarsObserver();
  document.addEventListener('astro:after-swap', initStarsObserver);
</script>
