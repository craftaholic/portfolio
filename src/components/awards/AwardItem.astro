---
interface Props {
  title: string;
  organization: string;
  year?: string;
  score?: string;
  link?: string;
  highlight?: boolean;
}

const { title, organization, year, score, link, highlight = false } = Astro.props;
---

<div class:list={['award-item', { highlight }]}>
  <h3 class="award-title">{title}</h3>
  <div class="award-meta">
    <span class="award-org">{organization}</span>
    {year && <span class="award-year">{year}</span>}
  </div>
  {score && <span class="award-score">{score}</span>}
  {link && (
    <a href={link} target="_blank" rel="noopener noreferrer" class="award-link">
      <span class="link-arrow">â–¸</span>
      Verify credential
      <svg class="external-icon" viewBox="0 0 24 24" width="12" height="12" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14 21 3"/>
      </svg>
    </a>
  )}
</div>

<style>
  .award-item {
    padding: 1rem 1.25rem;
    background: var(--gray-900);
    border: 1px solid var(--gray-800);
    border-radius: 0.5rem;
    transition: border-color var(--theme-transition), background var(--theme-transition);
  }

  :root.theme-dark .award-item {
    background: var(--gray-800);
    border-color: var(--gray-700);
  }

  .award-item:hover {
    border-color: var(--gray-700);
  }

  :root.theme-dark .award-item:hover {
    border-color: var(--gray-600);
    background: var(--gray-900);
  }

  .award-item.highlight {
    border-color: var(--accent-regular);
    background: var(--accent-overlay);
  }

  .award-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 0.375rem 0;
  }

  .award-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: var(--text-sm);
    color: var(--accent-regular);
    text-decoration: none;
    margin-top: 0.625rem;
    transition: color var(--transition-fast);
  }

  .award-link:hover {
    color: var(--accent-light);
  }

  .link-arrow {
    color: var(--accent-light);
    transition: transform var(--transition-fast);
  }

  .award-link:hover .link-arrow {
    transform: translateX(3px);
  }

  .external-icon {
    opacity: 0.6;
    transition: opacity var(--transition-fast);
  }

  .award-link:hover .external-icon {
    opacity: 1;
  }

  .award-score {
    display: block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--accent-regular);
    margin-top: 0.5rem;
  }

  .award-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: var(--text-sm);
    color: var(--gray-400);
  }

  .award-year {
    padding-left: 0.75rem;
    border-left: 1px solid var(--gray-700);
  }
</style>
