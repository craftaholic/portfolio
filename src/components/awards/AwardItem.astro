---
interface Props {
  title: string;
  organization: string;
  year?: string;
  score?: string;
  link?: string;
  highlight?: boolean;
}

const { title, organization, year, score, link, highlight = false } = Astro.props;
---

<div class:list={['award-item', { highlight }]}>
  <h3 class="award-title">{title}</h3>
  <div class="award-meta">
    <span class="award-org">{organization}</span>
    {year && <span class="award-year">{year}</span>}
  </div>
  {score && <span class="award-score">{score}</span>}
  {link && (
    <a href={link} target="_blank" rel="noopener noreferrer" class="award-link">
      View Badge
    </a>
  )}
</div>

<style>
  .award-item {
    padding: 1rem 1.25rem;
    background: var(--gray-900);
    border: 1px solid var(--gray-800);
    border-radius: 0.5rem;
    transition: border-color var(--theme-transition);
  }

  .award-item:hover {
    border-color: var(--gray-700);
  }

  .award-item.highlight {
    border-color: var(--accent-regular);
    background: var(--accent-overlay);
  }

  .award-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 0.375rem 0;
  }

  .award-link {
    display: inline-block;
    font-size: var(--text-sm);
    color: var(--accent-regular);
    text-decoration: none;
    margin-top: 0.5rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid var(--accent-regular);
    border-radius: 0.25rem;
    transition: background-color var(--theme-transition), color var(--theme-transition);
  }

  .award-link:hover {
    background-color: var(--accent-regular);
    color: var(--accent-text-over);
  }

  .award-score {
    display: block;
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--accent-regular);
    margin-top: 0.5rem;
  }

  .award-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: var(--text-sm);
    color: var(--gray-400);
  }

  .award-year {
    padding-left: 0.75rem;
    border-left: 1px solid var(--gray-700);
  }
</style>
