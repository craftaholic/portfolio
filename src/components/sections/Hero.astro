---
interface Props {
	greeting?: string;
	title?: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { greeting, title, tagline, align = 'start' } = Astro.props;
---

{greeting ? (
	<div class="hero">
		<div class="profile-image">
			<slot name="image" />
		</div>
		<div class="hero-text">
			<h1 class="greeting">{greeting}</h1>
		</div>
	</div>
) : (
	<div class:list={['hero-simple stack gap-4', align]}>
		<div class="stack gap-2">
			<h1 class="title">{title}</h1>
			{tagline && <p class="tagline">{tagline}</p>}
		</div>
		<slot />
	</div>
)}

<style>
	.hero {
		text-align: center;
		margin-bottom: 4rem;
		padding: 0;
	}

	.profile-image {
		margin: 0 auto 2rem;
		max-width: 280px;
	}

	.greeting {
		font-size: var(--text-base);
		font-weight: 400;
		color: var(--gray-0);
		line-height: 1.6;
		background-color: var(--accent-overlay);
		border-radius: 0.5rem;
		padding: 0.75rem 1rem;
		display: inline-block;
		max-width: 90%;
	}

	/* Simple hero (title/tagline pattern) */
	.hero-simple {
		font-size: var(--text-lg);
		text-align: center;
		margin-bottom: 2rem;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.tagline {
		font-size: var(--text-base);
		color: var(--gray-300);
	}

	/* Left-align on all screen sizes when start is set */
	.start {
		text-align: start;
	}

	.start .title,
	.start .tagline {
		margin-inline: unset;
	}

	@media (min-width: 50em) {
		.profile-image {
			max-width: 400px;
		}

		.greeting {
			font-size: var(--text-md);
			max-width: 80%;
		}

		.hero-simple {
			font-size: var(--text-xl);
		}

		.title {
			font-size: var(--text-2xl);
		}

		.tagline {
			font-size: var(--text-md);
		}
	}
</style>
