---
interface Props {
  name: string;
  role: string;
  imageSrc: string;
  imageAlt?: string;
}

const {
  name,
  role,
  imageSrc,
  imageAlt = name,
} = Astro.props;
---

<div class="vim-hero">
  <div class="vim-window">
    <div class="vim-header">
      <button class="vim-tab active" data-tab="about">~/about.sh</button>
      <button class="vim-tab" data-tab="role">role.md</button>
    </div>
    <div class="vim-body">
      <div class="vim-lines" data-lines></div>
      <div class="vim-code">
        <!-- About tab content -->
        <div class="tab-content active" data-content="about">
          <div class="line"><span class="comment">#!/bin/bash</span></div>
          <div class="line"></div>
          <div class="line"><span class="keyword">export</span> USER=<span class="string">"{name}"</span></div>
          <div class="line"></div>
          <div class="line"><span class="keyword">echo</span> <span class="string">"$USER - Love to build things and craves for knowledge"</span><span class="cursor"></span></div>
        </div>
        <!-- Role tab content -->
        <div class="tab-content" data-content="role">
          <div class="line"><span class="comment"># Role</span></div>
          <div class="line"></div>
          <div class="line"><span class="output">{role}</span></div>
        </div>
      </div>
      <button class="profile-btn" aria-label="View full profile image">
        <img src={imageSrc} alt={imageAlt} class="profile-img" />
      </button>
    </div>
    <div class="vim-statusline">
      <span class="vim-mode">NORMAL</span>
      <span class="vim-file" data-filename>about.sh</span>
      <span class="vim-position" data-position>6:1</span>
    </div>
  </div>
</div>

<!-- Lightbox modal -->
<div class="lightbox" id="profile-lightbox" aria-hidden="true">
  <div class="lightbox-backdrop"></div>
  <div class="lightbox-content">
    <img src={imageSrc} alt={imageAlt} class="lightbox-img" />
  </div>
</div>

<script>
  function initLightbox() {
    const profileBtn = document.querySelector('.profile-btn');
    const lightbox = document.getElementById('profile-lightbox');
    const backdrop = lightbox?.querySelector('.lightbox-backdrop');
    const content = lightbox?.querySelector('.lightbox-content');

    if (!profileBtn || !lightbox || !backdrop || !content) return;

    function openLightbox() {
      lightbox.classList.add('active');
      lightbox.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.remove('active');
      lightbox.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    profileBtn.addEventListener('click', openLightbox);
    backdrop.addEventListener('click', closeLightbox);
    content.addEventListener('click', closeLightbox);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('active')) {
        closeLightbox();
      }
    });
  }

  initLightbox();
  document.addEventListener('astro:after-swap', initLightbox);

  function initVimTabs() {
    const tabs = document.querySelectorAll('.vim-tab');
    const contents = document.querySelectorAll('.tab-content');
    const linesContainer = document.querySelector('[data-lines]');
    const filenameEl = document.querySelector('[data-filename]');
    const positionEl = document.querySelector('[data-position]');

    function updateLineNumbers(count: number) {
      if (!linesContainer) return;
      linesContainer.innerHTML = '';
      for (let i = 1; i <= count; i++) {
        const span = document.createElement('span');
        span.className = 'line-nr';
        span.textContent = String(i);
        linesContainer.appendChild(span);
      }
    }

    function switchTab(tabName: string) {
      tabs.forEach(t => t.classList.toggle('active', t.getAttribute('data-tab') === tabName));
      contents.forEach(c => c.classList.toggle('active', c.getAttribute('data-content') === tabName));

      const activeContent = document.querySelector(`.tab-content[data-content="${tabName}"]`);
      const lineCount = activeContent?.querySelectorAll('.line').length || 7;
      updateLineNumbers(lineCount);

      if (filenameEl) filenameEl.textContent = tabName === 'about' ? 'about.sh' : 'role.md';
      if (positionEl) positionEl.textContent = `${lineCount}:1`;
    }

    // Initial line numbers
    const initialContent = document.querySelector('.tab-content.active');
    updateLineNumbers(initialContent?.querySelectorAll('.line').length || 7);

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabName = tab.getAttribute('data-tab');
        if (tabName) switchTab(tabName);
      });
    });
  }

  initVimTabs();
  document.addEventListener('astro:after-swap', initVimTabs);
</script>

<style>
  .vim-hero {
    display: flex;
    justify-content: center;
    padding: 1rem 0 2rem;
  }

  .vim-window {
    width: 100%;
    max-width: 500px;
    background: var(--terminal-bg);
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--terminal-border);
    transition: box-shadow var(--transition-normal), border-color var(--transition-normal);
  }

  .vim-window:hover {
    box-shadow:
      var(--shadow-lg),
      0 0 30px var(--terminal-glow-color),
      0 0 60px var(--terminal-glow-color-strong);
    border-color: var(--accent-regular);
  }

  .vim-header {
    display: flex;
    background: var(--terminal-header-bg);
    border-bottom: 1px solid var(--terminal-border);
  }

  .vim-tab {
    padding: 0.4rem 0.75rem;
    font-size: var(--text-sm);
    font-family: inherit;
    color: var(--gray-400);
    background: transparent;
    border: none;
    border-right: 1px solid var(--terminal-border);
    cursor: pointer;
    transition: color var(--transition-fast);
  }

  .vim-tab:hover {
    color: var(--gray-200);
  }

  .vim-tab.active {
    background: var(--terminal-bg);
    color: var(--gray-100);
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .vim-body {
    display: flex;
    padding: 0.75rem;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .vim-lines {
    display: flex;
    flex-direction: column;
    text-align: right;
    color: var(--gray-500);
    font-size: var(--text-sm);
    line-height: 1.5;
    user-select: none;
    padding-right: 0.5rem;
    border-right: 1px solid var(--terminal-border);
  }

  .line-nr {
    min-width: 1.2em;
  }

  .vim-code {
    flex: 1;
    font-size: var(--text-sm);
    line-height: 1.5;
    min-height: calc(6 * 1.5em);
  }

  .line {
    min-height: 1.5em;
  }

  .comment {
    color: var(--syntax-comment);
    font-style: italic;
  }

  .keyword {
    color: var(--syntax-keyword);
  }

  .string {
    color: var(--syntax-string);
  }

  .output {
    color: var(--gray-100);
    font-weight: 600;
  }

  .cursor {
    display: inline-block;
    width: 0.6em;
    height: 1.2em;
    background: var(--accent-light);
    animation: blink 1s step-end infinite;
    vertical-align: text-bottom;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .profile-btn {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    flex-shrink: 0;
    border-radius: 50%;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .profile-btn:hover {
    transform: scale(1.08);
  }

  .profile-btn:hover .profile-img {
    box-shadow: 0 0 20px var(--terminal-glow-color-strong);
  }

  .profile-img {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 20%;
    border: 2px solid var(--accent-regular);
    display: block;
    transition: box-shadow var(--transition-fast);
  }

  /* Lightbox styles */
  .lightbox {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-normal), visibility var(--transition-normal);
  }

  .lightbox.active {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
  }

  .lightbox-content {
    position: relative;
    z-index: 1;
    cursor: pointer;
    animation: lightbox-zoom var(--transition-normal);
  }

  .lightbox.active .lightbox-content {
    animation: lightbox-zoom var(--transition-normal) forwards;
  }

  @keyframes lightbox-zoom {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .lightbox-img {
    max-width: 90vw;
    max-height: 80vh;
    border-radius: 1rem;
    object-fit: contain;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    border: 3px solid var(--accent-regular);
  }

  .vim-statusline {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.2rem 0.5rem;
    background: var(--accent-dark);
    font-size: var(--text-sm);
    color: var(--gray-999);
  }

  .vim-mode {
    font-weight: 700;
    color: var(--gray-0);
  }

  .vim-file {
    color: var(--gray-0);
  }

  .vim-position {
    color: var(--gray-0);
  }

  @media (min-width: 50em) {
    .vim-hero {
      padding: 1.5rem 0 2.5rem;
    }

    .vim-body {
      padding: 1rem;
    }

    .vim-code,
    .vim-lines {
      font-size: var(--text-base);
    }

    .profile-img {
      width: 90px;
      height: 90px;
    }

    .vim-output {
      padding: 0.6rem 1rem;
      font-size: var(--text-base);
    }
  }
</style>
